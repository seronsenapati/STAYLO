<% layout('/layouts/boilerplate')-%>

<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/listings">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Add New Listing</li>
        </ol>
      </nav>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white text-center py-4">
          <h2 class="mb-0">Add Your Property</h2>
          <p class="mb-0">Share your unique accommodation with travelers worldwide</p>
        </div>
        <div class="card-body p-4 p-md-5">
          <form
            action="/listings"
            method="POST"
            novalidate
            class="needs-validation"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-12 mb-4">
                <h4 class="mb-4 pb-2 border-bottom">Basic Information</h4>
              </div>
              
              <div class="col-12 mb-4">
                <label for="title" class="form-label">Property Title *</label>
                <input
                  type="text"
                  id="title"
                  placeholder="e.g. Cozy Mountain Cabin with Panoramic Views"
                  name="listing[title]"
                  required
                  class="form-control form-control-lg"
                />
                <div class="invalid-feedback">
                  Please provide a title for your listing.
                </div>
              </div>
              
              <div class="col-12 mb-4">
                <label for="description" class="form-label">Description</label>
                <textarea
                  id="description"
                  placeholder="Describe your property in detail. Highlight unique features, amenities, and what makes it special for travelers."
                  name="listing[description]"
                  class="form-control"
                  rows="5"
                ></textarea>
              </div>
              
              <div class="col-12 mb-4">
                <h4 class="mb-4 pb-2 border-bottom">Pricing & Location</h4>
              </div>
              
              <div class="col-md-6 col-sm-12 mb-4">
                <label for="price" class="form-label">Price per Night (₹) *</label>
                <div class="input-group">
                  <span class="input-group-text">₹</span>
                  <input
                    type="number"
                    id="price"
                    placeholder="e.g. 5000"
                    name="listing[price]"
                    required
                    min="0"
                    class="form-control form-control-lg"
                  />
                </div>
                <div class="invalid-feedback">
                  Please enter a valid price.
                </div>
              </div>
              
              <div class="col-md-6 col-sm-12 mb-4">
                <label for="location" class="form-label">Location *</label>
                <input
                  type="text"
                  id="location"
                  placeholder="e.g. Goa, Maharashtra"
                  name="listing[location]"
                  required
                  class="form-control form-control-lg"
                />
                <div class="invalid-feedback">
                  Please provide a location.
                </div>
              </div>
              
              <div class="col-12 mb-4">
                <label for="country" class="form-label">Country *</label>
                <input
                  type="text"
                  id="country"
                  placeholder="e.g. India"
                  name="listing[country]"
                  required
                  class="form-control form-control-lg"
                />
                <div class="invalid-feedback">
                  Please provide a country.
                </div>
              </div>
              
              <div class="col-12 mb-4">
                <h4 class="mb-4 pb-2 border-bottom">Property Images</h4>
              </div>
              
              <div class="col-12 mb-4">
                <label for="image" class="form-label">Upload Featured Image *</label>
                <input
                  type="file"
                  id="image"
                  name="listing[image]"
                  class="form-control form-control-lg"
                  accept="image/*"
                  required
                />
                <div class="invalid-feedback">
                  Please upload an image for your listing.
                </div>
                <div class="form-text">Supported formats: JPG, PNG, JPEG (Max 5MB)</div>
              </div>
            </div>
            
            <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-5 pt-4 border-top">
              <a href="/listings" class="btn btn-lg btn-outline-secondary w-100 w-md-auto mb-3 mb-md-0">
                <i class="ri-arrow-left-line"></i> Back to Listings
              </a>
              <button class="btn btn-lg btn-primary w-100 w-md-auto" type="submit">
                <i class="ri-save-line"></i> Publish Property
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>